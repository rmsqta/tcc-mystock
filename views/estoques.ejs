<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head') %>
    <title>MyStock</title>
</head>
<body style="margin-bottom: 5%;">
    <%- include('navbar-logado') %>
    <div class="container mt-5" style="margin-right: auto; margin-left: auto;">
        <% if(estoque_success) { %>
                <div class="alert alert-success mt-5" style="margin-left: auto; margin-right: auto; height: 55px; width: 500px;">
                    <p>
                        <%= estoque_success %>
                    </p>
                </div>
            <% } %>
            <br>
        <div class="d-flex flex-row mx-3">
            <h3 class="fw-bold">Meus estoques</h3>
            <a class="fw-bold" aria-current="page" href="/addestoque" style="color: black; margin-left: auto;">
                <button type="button" class="btn btn-dark" style="background-color: black;">Cadastrar Estoque</button>
            </a>
        </div>
        <div class="container mt-5">
            <ul class="list-group">
                <li class="list-group-item">
                    <a class="fw-bold" aria-current="page" href="/paginaestoque" style="color: black; margin-left: auto; text-decoration: none;">
                        Loja de Camisetas
                    </a>
                </li>
            </ul>
            <br>
            <% estoques.forEach(function(estoque) { %>
                <ul class="list-group">
                    <li class="list-group-item">
                        <a class="fw-bold" aria-current="page" href="/paginaestoque" style="color: black; margin-left: auto; text-decoration: none;">
                            <%= estoque.nome_es %>
                        </a>
                    </li>
                </ul>
                <br>
            <% }); %>
        </div>    
    </div>
</body>
</html>